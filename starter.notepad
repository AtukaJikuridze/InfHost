/* font-family: 'Prompt', sans-serif; */

*{
    box-sizing: border-box;
}
body{
    margin: 0;
}
.menu-bar{
    position: absolute;
    left: 9;
    top: 16;
    color: #fff;
    font-size: 30px;
    cursor: pointer;
    display: none;
}
nav{
    background-color: #30294c;
    height: 74px;
    display: flex;
    transition: .5s;
}
.nav_container{
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
  

}
.main__ul li{
    display: inline-block;
    padding-left: 30px;
    padding-top: 10px;
}
.main__ul li a{
    color: #fff;
    font-size: 14px;
    font-family: 'Montserrat', sans-serif;
}
nav h1{
    font-weight: bold;
    font-size: 26px;
    color: #fff;
    font-family: 'Montserrat', sans-serif;
}
nav button{
    width: 135px;
    height:50px;
    border: #645f79 2px solid;
    font-size: 16px;
    display: flex;
    justify-content: center;
    align-items: center;
    background:transparent;
    border-radius: 5px;
    color: #fff;
    outline: none;
    text-decoration: 1px underline #30294c;

}
.section1{
    height: 600px;
    /* background-color: #26203c; */
}

.information__line{
    width: 100%;
    height: 50px;
    background: transparent;
    border-bottom: 1px solid #645f79;
    display: flex;
    justify-content: space-between;
    align-items: center;
  
}

.information__line p{
    color: #fff;
    font-size: 14px;
}
.information__line p span{
    font-weight: bold;
}
.info__flex{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 12px;
    transform: translateX(-15px);
}

.contact__info li a{
    color: #fff;
    font-size: 14px;
}
.contact__info{
   padding-bottom:15px;
}
.contact__info li{
    display: inline-block;
    padding: 0 35px;
}

.footer{
    height: 450px;
    width: 100%;
    background-color: #26203c;
    padding-top: 100px;
    color: rgba(255, 255, 255, 0.877);
}
.footer__starter{
    transform: translateX(-50px);
}
.flex{
    display: flex;
}

.footer__starter h5{
     margin: 4 10;
    color: #aea5bf;

}
.footer__starter h3{
    color: #ccc9da;
}
.footer__icons i{
    color: #bfb9c9;
cursor: pointer;
    font-size: 27px;
    padding: 20 10 ;
    
}
.footer__icons{
    padding-bottom: 40px;
}
.footer__starter p{
    color: #aea5bf;
}
.footer__information h3{
    font-family: 'Montserrat', sans-serif;
    color: #ffffffab;


}
.footer__information p{
    color: #aea5bf;
    font-family: 'Prompt', sans-serif;
cursor: pointer;
}
.footer_line{
    width: 100%;
    height: 0.7px;
    background-color:#ffffffab;
    margin-top: 30px;
    
}
.hr__toggle{
    display: none;
}




@media screen and (max-width: 990px) {
    .section1__text__information{
        padding: 0;
    }


    .footer{
        height: auto;
        padding-bottom: 40px;
    }
   
    .footer__icons{
        padding-bottom: 0;
      
    }
    .footer__information{
        margin: auto;
    }
    .hr__toggle{
        display: block;
    }
    .xx{
        justify-content: center;
        align-items: center;
        display: flex;
        text-align: center;
     }
     .footer__starter h3{
        font-size: 30px;
        font-family: 'prompt',sans-serif;
     }
    
     .footer__icons{
        display: flex;
        justify-content: center;
        align-items: center;
     }
     .x{
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
     }
     .footer__starter{
        transform: translateX(0);
        padding-bottom: 50px;
        text-align: center;
     }
     





}
@media screen and (max-width: 770px){
    nav{
        position: fixed;
        width: 100%;
        z-index: 50000;
        }
        .menu-bar{
            display: block;
            left: 80%;
            top: 20px;
            z-index: 1000;
        }
        
        
        .nav_container{
            width: 100%;
            display: flex;
            flex-direction: column;
            padding: 20px;
        }
        .nav_container h1{
            margin-left: -16px;
        }
        .main__ul{
          margin-left: -50px;
        }
        .after__nav {
            height: 200px;
        }
        .nav_container{
            width: 100%;
            display: flex;
            flex-direction: column;
            padding: 20px;
        }
        .nav_container h1{
            margin-left: -16px;
        }
        .nav_container ul,.nav__button{
            display: none;
        }
        .after__nav ul,.after__nav .nav__button{
            display: block;
        }
        .info__flex{
            display: block;
            text-align: center;
            padding-top: 30px;
            padding-bottom: 10px;
            padding-left: 25px;
           }
           .information__line{
            height: 80px;
            padding-left: 30px;
           }
    .section1{
    transform: translateY(74px);
    height: auto;
}
.menu-bar{
    display: block;
}
.footer__information{
    text-align: center;

}


}